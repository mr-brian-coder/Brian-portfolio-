          </div>
        </aside>
      </div>
    </section>

  </main>

  <footer>
    <div class="container">
      <p>&copy; 2025 Brian Ombasa — Consulting, Marketing & Web Development. All rights reserved.</p>
      <p class="muted small">Designed with care — Heart-to-Heart (H2H) values.</p>
    </div>
  </footer>

  <!-- Minimal JavaScript for menu & form handling -->
  <script>
    // Menu toggle for small screens
    const menuToggle = document.getElementById('menuToggle');
    const mainNav = document.getElementById('mainNav');
    menuToggle && menuToggle.addEventListener('click', () => {
      const expanded = menuToggle.getAttribute('aria-expanded') === 'true';
      menuToggle.setAttribute('aria-expanded', !expanded);
      // simple toggle by injecting a small nav
      if (!expanded) {
        mainNav.style.display = 'flex';
        mainNav.style.flexDirection = 'column';
        mainNav.style.position = 'absolute';
        mainNav.style.right = '16px';
        mainNav.style.top = '64px';
        mainNav.style.background = 'rgba(0,64,128,0.95)';
        mainNav.style.padding = '12px';
        mainNav.style.borderRadius = '10px';
      } else {
        mainNav.style.display = '';
        mainNav.style.flexDirection = '';
        mainNav.style.position = '';
        mainNav.style.background = '';
        mainNav.style.padding = '';
        mainNav.style.borderRadius = '';
      }
    });

    // Contact form handler: constructs a mailto link (works if user has mail client)
    function handleForm(e){
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const message = document.getElementById('message').value.trim();
      if(!name || !message){ alert('Please complete the form'); return false; }
      const subject = encodeURIComponent('Website contact from ' + name);
      const body = encodeURIComponent(message + "\\n\\nFrom: " + name);
      const mailto = 'mailto:brianombasa045@gmail.com?subject=' + subject + '&body=' + body;
      window.location.href = mailto;
      return false;
    }

    // Placeholder downloads — replace with real file URLs or repo paths
    document.getElementById('downloadCV').addEventListener('click', function(e){
      e.preventDefault();
      alert('CV download placeholder. Upload your CV to your repo and update the link.');
    });
    document.getElementById('wpDownload').addEventListener('click', function(e){
      e.preventDefault();
      alert('White paper download placeholder. Upload the PDF and update the link.');
    });
    document.getElementById('cardDownload').addEventListener('click', function(e){
      e.preventDefault();
      alert('Business card sample placeholder. Upload the PDF and update the link.');
    });
    document.getElementById('slidesDownload').addEventListener('click', function(e){
      e.preventDefault();
      alert('Slides download placeholder. Upload the PDF and update the link.');
    });
  </script>
</body>
</html>
